{
    "openapi": "3.0.0",
    "info": {
        "title": "Backend Service for the Customer Data Portal",
        "description": "A REST API for a backend service to store data and retrieve it in a fast and efficient way",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "components": {
        "schemas": {
            "Customer": {
                "type": "object",
                "properties": {
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "x-indexed": true
                    },
                    "password": {
                        "type": "string"
                    },
                    "address": {
                        "type": "object",
                        "properties": {
                            "address_line_1": {
                                "type": "string"
                            },
                            "address_line_2": {
                                "type": "string"
                            },
                            "city": {
                                "type": "string"
                            },
                            "state": {
                                "type": "string"
                            },
                            "country": {
                                "type": "string"
                            },
                            "zip_code": {
                                "type": "string"
                            },
                            "coordinates": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": ["Point"]
                                    },
                                    "coordinates": {
                                        "type": "array",
                                        "items": {
                                            "type": "number"
                                        }
                                    }
                                },
                                "x-indexed": true,
                                "required": ["type", "coordinates"]
                            }
                        },
                        "required": [
                            "address_line_1", "city", "state",
                            "country", "zip_code", "coordinates"
                        ]
                    },
                    "phone": {
                        "type": "string"
                    },
                    "communication_preferences": {
                        "type": "string"
                    },
                    "contract": {
                        "type": "object",
                        "properties": {
                            "contract_type": {
                                "type": "string"
                            },
                            "pricing": {
                                "type": "number"
                            },
                            "service_level_agreements": {
                                "type": "string"
                            },
                            "first_contracted_date": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "contracted_date": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "contract_duration_days": {
                                "type": "number"
                            },
                            "renewal_date": {
                                "type": "string",
                                "format": "date-time"
                            }
                        },
                        "required": [
                            "contract_type", "pricing", "service_level_agreements", "first_contracted_date",
                            "contracted_date", "contract_duration_days", "renewal_date"
                        ]
                    },
                    "finances": {
                        "type": "string"
                    }
                },
                "required": [
                    "first_name", "last_name", "email", "phone", "address", "contract", "finances",
                    "communication_preferences", "password"
                ]
            },
            "Error": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "integer"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "required": ["code", "message"]
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "BearerAuth": []
        }
    ],
    "paths": {
        "/auth": {
            "post": {
                "summary": "Generate JWT token fir authentication",
                "operationId": "generateToken",
                "tags": ["Authentication"],
                "security": [],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    } 
                                },
                                "required": ["email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/verify": {
            "post": {
                "summary": "Verify JWT token for authentication",
                "operationId": "verifyToken",
                "tags": ["Authentication"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string"
                                    }
                                },
                                "required": ["token"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token verified successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "email": {
                                            "type": "string",
                                            "format": "email"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized: Invalid or expired token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Customer not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user": {
            "post": {
                "summary": "Create a new customer",
                "operationId": "createCustomer",
                "tags": ["Customer"],
                "requestBody": {
                    "description": "Customer data to create",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Customer"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Customer created successfully",
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{email}": {
            "get": {
                "summary": "Gets a JSON with all the customer related data",
                "operationId": "getCustomerByEmail",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": ["Customer"],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "required": true,
                        "description": "Email address of the customer",
                        "schema": {
                            "type": "string",
                            "format": "email"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Customer data retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Customer"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Customer not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Updates the data from a customer",
                "operationId": "updateCustomer",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": ["Customer"],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "required": true,
                        "description": "Email address of the customer",
                        "schema": {
                            "type": "string",
                            "format": "email"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Updated customer data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Customer"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Customer data updated successfully",
                    },
                    "404": {
                        "description": "Customer not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete customer data by email",
                "operationId": "deleteCustomerByEmail",
                "tags": ["Customer"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "required": true,
                        "description": "Email address of the Customer",
                        "schema": {
                            "type": "string",
                            "format": "email"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "User data deleted successfully"
                    },
                    "404": {
                        "description": "Customer not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
